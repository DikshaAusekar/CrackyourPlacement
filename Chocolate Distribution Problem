import java.util.Arrays;

class Solution {
    public long findMinDiff (long[] arr, long n, long m) {
        // If there are no chocolates or students
        if (m == 0 || n == 0) {
            return 0;
        }

        // Number of students cannot be more than number of packets
        if (n < m) {
            return -1;
        }

        // Sort the given packets
        Arrays.sort(arr);

        // Find the minimum difference
        long minDiff = Long.MAX_VALUE;

        // Find the minimum difference by comparing the difference between the maximum
        // and minimum values in each subarray of size m
        for (int i = 0; i + m - 1 < n; i++) {
            long diff = arr[i + (int)m - 1] - arr[i];
            if (diff < minDiff) {
                minDiff = diff;
            }
        }
        return minDiff;
    }
}
